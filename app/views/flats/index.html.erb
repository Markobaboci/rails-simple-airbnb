<h1 class="mb-4">All flats</h1>

<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <h5 class="card-title"><%= flat.name %></h5>
        <p class="card-text">Address: <%= flat.adress %></p>
        <p class="card-text">Description: <%= flat.description %></p>
        <p class="card-text">Price per night: â‚¬ <%= flat.price_per_night %></p>
        <p class="card-text">Number of guests: <%= flat.number_of_guests %></p>
        <div>
          <%= link_to "Show flat info", flat_path(flat), class: "btn btn-success mb-4" %>
          <%= link_to 'Delete Flat', flat_path(flat), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger mb-4"%>
          <%= link_to "Add a new Flat", new_flat_path, class: "btn btn-success mb-4" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <%= link_to "Add a new Flat", new_flat_path, class: "btn btn-success mb-4" %>
</div>
