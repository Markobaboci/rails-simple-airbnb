<h1>Edit Flat: <%= @flat.name %></h1>

<div class="container">
  <%= simple_form_for @flat, html: { class: "form-group" } do |form| %>
    <div class="form-group">
      <%= form.input :name, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.input :adress, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.input :description, as: :text, input_html: { rows: 3, class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.input :price_per_night, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.input :number_of_guests, input_html: { class: "form-control" } %>
    </div>

    <%= form.button :submit, "Update Flat", class: "btn btn-primary mt-3" %>
  <% end %>
</div>
